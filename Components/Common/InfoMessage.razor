@namespace BlazorClient.Components
@code {
    private readonly Dictionary<string, string> styles = new()
    {
        { "background-color", "rgb(20, 0, 80)" },
        { "color", "white" },
        { "padding", "20px" },
        { "font-family", "Arial, sans-serif" }
    };

    private readonly Dictionary<string, string> redStyles = new()
    {
        { "background-color", "rgb(20, 0, 80)" },
        { "color", "red" },
        { "padding", "20px" },
        { "font-family", "Arial, sans-serif" }
    };
}

<div style="@string.Join(";", styles.Select(kv => $"{kv.Key}: {kv.Value}"))">
    <p>
        Thank you for purchasing <em>The Aspiring Full Stack Developer's Playbook: From AI to Microservices and Kubernetes</em>.
        I hope you find the book and the accompanying code both enjoyable and practically useful.
    </p>
    <p style="@string.Join(";", redStyles.Select(kv => $"{kv.Key}: {kv.Value}"))">
        Don't forget to leave a review on Amazon!
    </p>
    <p>
        If you have any questions or feedback, feel free to email me&mdash;my contact information is in the book.
    </p>
    <p>Please check:</p>
    <ul style="list-style-image: none; list-style-type: disc; padding-left: 20px;">
        <li>Authorization with JSON WebToken</li>
        <li>File upload with drag & drop</li>
        <li>State Management with React Context API</li>
        <li>Storage of passwords and secret keys</li>
        <li>Unobtrusive validation</li>
        <li>SQLite database</li>
        <li>Server Side Rendering</li>
        <li>Webpack 5 for module bundling and minification</li>
    </ul>
</div>
