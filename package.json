{
  "name": "blazor_starterkit",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bootstrap": "^5.3.3",
    "bootstrap-css-only": "3.3.5"
  },
  "scripts": {
    "copy:bootstrap": "cpx \"node_modules/bootstrap/dist/**/*.*\" wwwroot/lib/bootstrap/",
    "copy:bootstrap-css-only": "cpx \"node_modules/bootstrap-css-only/**/*.*\" wwwroot/lib/bootstrap-css-only/",
    "copy:fontawesome": "cpx \"node_modules/@fortawesome/fontawesome-free/**/*.*\" wwwroot/lib/fontawesome/",
    "build": "npm run copy:bootstrap && npm run copy:fontawesome"
  },
  "devDependencies": {
    "cpx": "^1.5.0"
  }
}
